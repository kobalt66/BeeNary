{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "BeeNary",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#tokens"
		},
		{
			"include": "#addtokens"
		},
		{
			"include": "#chars"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#builtin-functions"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#identifiers"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		}
	],
	"repository": {
		"comments": {
			"patterns": [{
				"match": "#.*",
				"name": "comment.line.number-sign.b"
			}]
		},
		"tokens": {
			"patterns": [{
				"name": "entity.name.class",
				"match": "\\b(?<=:)(src|end|trace|functionptr|python|honeycomb|hive|meadow)(?=[:.<])\\b"
			}]
		},
		"addtokens": {
			"patterns": [{
				"name": "entity.other.inherited-class",
				"match": "\\b(?<=@)(onetime|threaded|readonly|await)\\b"
			}]
		},
		"chars": {
			"patterns": [
			{
				"match": ":",
				"name": "entity.name.class"
			},
			{
				"match": "<",
				"name": "entity.name.class"
			},
			{
				"match": ">",
				"name": "entity.name.class"
			},
			{
				"match": ",",
				"name": "entity.name.class"
			}]
		},
		"operators": {
			"patterns": [{
				"name": "constant.language",
				"match": "\\b(is|in|not)\\b"
			}]
		},
		"builtin-functions": {
			"patterns": [{
				"name": "entity.name.function",
				"match": "\\b(inv|other|flyto|flyout|wax|sting|take)\\b"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control",
				"match": "\\b(true|false|honeypot|honey|stick)\\b"
			}]
		},
		"identifiers": {
			"patterns": [{
				"match": "([a-zA-Z.ö.Ö.ä.Ä.ü.Ü._]+)",
            	"name": "constant.character.escape"
			}]
		},
		"strings": {
			"name": "string.quoted.double.b",
			"begin": "\"",
			"end": "\"",
			"patterns": [{
				"name": "constant.character.escape.b",
				"match": "\\\\."
			}]
		},
		"numbers": {
			"patterns": [{
				"match": "[0-9]+",
				"name":"constant.numeric"
			}]
		}
	},
	"scopeName": "source.b"
}
